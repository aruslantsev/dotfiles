setopt PROMPT_SUBST

NEWLINE=$'\n'

. ${BS_PATH_PREFIX}/scripts/timer
. ${BS_PATH_PREFIX}/scripts/system
. ${BS_PATH_PREFIX}/scripts/devtools

if [ "$IS_ROOT" = 1 ]; then
	OK_COLOR=$PS1_GREY
else
	OK_COLOR=$PS1_GREEN
fi
ERR_COLOR=$PS1_RED

EXITCODE='$(exitcode=$?; if [ ${exitcode} = 0 ]; then echo -ne "${OK_COLOR}"; else echo -ne "${ERR_COLOR}"; fi; echo -n "[${exitcode}|$(get_exectime)]"; echo -e "${PS1_RESET}")'

JOBS_INFO='' # '$(JOBS=$(get_jobs); if [ -n "${JOBS}" ]; then echo -e "${PS1_YELLOW}[${JOBS}]${PS1_RESET} "; fi)'

DEVTOOLS_STR='$(status_str=$(get_devtools_str); if [ -n "${status_str}" ]; then echo -e "${NEWLINE}│  ${PS1_GREY}${status_str}${PS1_RESET}"; else echo -n; fi)'

SYSTEM_LOAD='$(echo -e "${PS1_GREY}$(get_system_load)${PS1_RESET}")'

TIME='${PS1_GREY}%D{%F %T}.${PS1_RESET}'

SSH='$(if [ -n "${SSH_CONNECTION}" ]; then echo -e "${PS1_YELLOW}[SSH]${PS1_RESET} "; fi)'

if [ "$IS_ROOT" = 1 ]; then
	PS1='${PS1_RED}%m ${PS1_BLUE}%~ %#${PS1_RESET}'
else
	PS1='${PS1_GREEN}%n@%m ${PS1_BLUE}%~ %#${PS1_RESET}'
fi
PS1="┌─ ${EXITCODE} ${TIME} ${SYSTEM_LOAD} ${DEVTOOLS_STR}${NEWLINE}└─ ${SSH}${JOBS_INFO}${PS1} "

# ┌─┬─┐
# │ │ │
# ├─┼─┤
# │ │ │
# └─┴─┘
